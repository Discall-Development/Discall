{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "NodeNext",
		"target": "ESNext",
		"types": ["node"],
		"moduleResolution": "node",
        "declaration": true,
        "outDir": "./.build",
        "strict": true
	},
	"exclude": [
		"node_modules/**/*",
		"example/**/*" 
	],
	"include": [
		"src/**/*",
		"test/**/*",
		"index.ts"
	]
}